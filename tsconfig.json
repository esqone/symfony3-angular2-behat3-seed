{
  "filesGlob": [
    "script/app/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "rootDir": "scripts",
    "outDir": "web/app",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listFiles": true
  },
  "exclude": [
    "node_modules",
    "js",
    "fonts",
    "images",
    "vendor",
    "var",
    "tmp,"
  ]
}
